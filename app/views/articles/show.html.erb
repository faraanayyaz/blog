<h1><%= @article.title%></h1>
<p> ID: <%= @article.id%></p>
<p> Body: <%= @article.body%></p>
<p> Created_At: <%= @article.created_at%></p>

<%= link_to "Edit", edit_article_path(@article) %>
<%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?", disable_with: "Processing..."} %>
<%= link_to "Back", :back %>


<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>


<h2><br/> Add your comments here: </h2>
<%= form_with model: [@article, @article.comments.build ] do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>